<div class="container">
  <div class="container">
    <div class="alert alert-success">
      <h1>Status Report</h1>
      {{#each model.features as |feature|}}
        <p><i class="fa {{if feature.ok 'fa-check-circle'}}"></i> {{feature.name}}</p>
      {{/each}}<br/>
      <p>Go {{#link-to "setup"}}here{{/link-to}} to setup your first user</p><br/>
      {{#if session.isAuthenticated}}
      <p>Logged in as {{session.data.authenticated.email}}. <a {{ action 'logout' }}>Logout</a></p>
      {{else}}
      <p>{{#link-to "login"}}Login{{/link-to}}</p>
      {{/if}}
    </div>
  </div>
</div>
