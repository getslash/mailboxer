[Unit]
Description=Mailboxer e-mail Delivery Testing Service
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/mailboxer/
ExecStartPre=-/usr/local/bin/docker-compose -f docker/docker-compose.yml -p mailboxer down
ExecStart=/usr/local/bin/docker-compose  -f docker/docker-compose.yml -p mailboxer up -d
ExecStop=/usr/local/bin/docker-compose -f docker/docker-compose.yml -p mailboxer down

[Install]
WantedBy=multi-user.target
